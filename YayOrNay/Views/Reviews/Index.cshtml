@model YayOrNay.Models.Movie



@{
    ViewBag.Title = "Index";
}

<h2>Reviews for @Model.Title</h2>

@* create a link to _Reviews as partial view *@

@Html.Partial("_Reviews", @Model.Reviews)



@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Write a Review", "Create", new { movieID = Model.Id})
    </p>
}



<a href="javascript:void(0);" onclick="history.go(-1);">Back to Moive List</a>