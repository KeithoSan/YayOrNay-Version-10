@model IEnumerable<YayOrNay.Models.MovieReview>


@* Partial view for reviers *@

<table class="table">



    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.ReviewerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
      



     


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewerName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
          

           

            @if (item.ReviewerName != null && item.ReviewerName.Equals(HttpContext.Current.User.Identity.Name))
            {
                <td>
                    @Html.ActionLink("Edit Review", "Edit", new { id = item.Id }) 
          
                </td>
            }
        </tr>
    }

</table>
